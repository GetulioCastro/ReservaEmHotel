<mah:MetroWindow x:Class="ReservaEmHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReservaEmHotel"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Controle de Reservas" Height="1080" Width="1290">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Image x:Name="imgPrincipal" Height="395" Width="900" Grid.Row="0" Source="/imgPrincipal.png" >
            <Image.OpacityMask>
                <ImageBrush TileMode="Tile" Stretch="Uniform" ImageSource="/imgPrincipal.png"/>
            </Image.OpacityMask>
        </Image>


    </Grid>
</mah:MetroWindow>
